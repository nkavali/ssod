<!doctype html>
<html lang="en">

<% include header %>

    <body>
        <div class="container-fluid">
            <div class="col-md-4 col-md-offset-4">
                <br><br><br><br>

                <div class="card">
                    <div class="card-header" data-background-color="blue">
                        <h4 class="title" style="padding-left: 40px; font-weight: bold;background: url(/assets/img/logo.png) no-repeat; background-size: 28px 28px;">Login</h4>
                    </div>
                    <div class="card-content">
                        <form action="/auth/login" method="POST">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group label-floating is-empty">
                                        <label class="control-label">Email</label>
                                        <input name="email" type="email" class="form-control">
                                        <span class="material-input"></span></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group label-floating is-empty">
                                        <label class="control-label">Password</label>
                                        <input name="password" type="password" class="form-control">
                                        <span class="material-input"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-sm btn-info pull-right">SignIn</button>
                                </div>
                            </div>
                            <div class="clearfix"></div>

                    </div>
                    </form>
                    <div class="card-footer">
                        <div class="stats">
                            &copy; 2018 &nbsp;&nbsp;&nbsp;&nbsp; iSiteWatch
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>

    </body>

    <% include footer %>

        <script>
            $(document).ready(function() {
                var msg = "<%= typeof message != 'undefined' ? message : '' %>";
                if (msg != '')
                    showNotification("<b>Status : </b><br> " + msg, 'danger');
            });

            function showNotification(message, type) {

                $.notify({
                    icon: "report_problem",
                    message: message
                }, {
                    type: type,
                    timer: 3000,
                    placement: {
                        from: 'top',
                        align: 'right'
                    }
                });
            }
        </script>

</html>